<h1>Editing image</h1>

<% form_for(@image) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :entry_id %><br />
    <%= f.text_field :entry_id %>
  </p>
  <p>
    <%= f.label :image_url %><br />
    <%= f.text_field :image_url %>
  </p>
  <p>
    <%= f.label :image_credit %><br />
    <%= f.text_field :image_credit %>
  </p>
  <p>
    <%= f.label :image_date %><br />
    <%= f.date_select :image_date %>
  </p>
  <p>
    <%= f.label :image_caption %><br />
    <%= f.text_area :image_caption %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @image %> |
<%= link_to 'Back', images_path %>