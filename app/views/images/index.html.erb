<h1>Listing images</h1>

<table>
  <tr>
    <th>Entry</th>
    <th>Image url</th>
    <th>Image credit</th>
    <th>Image date</th>
    <th>Image caption</th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%=h image.entry_id %></td>
    <td><%=h image.image_url %></td>
    <td><%=h image.image_credit %></td>
    <td><%=h image.image_date %></td>
    <td><%=h image.image_caption %></td>
    <td><%= link_to 'Show', image %></td>
    <td><%= link_to 'Edit', edit_image_path(image) %></td>
    <td><%= link_to 'Destroy', image, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New image', new_image_path %>