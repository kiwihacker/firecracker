<h1>Listing roles</h1>

<table>
  <tr>
    <th>Role</th>
    <th>Role j</th>
    <th>Desc</th>
    <th>Desc j</th>
  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%=h role.role %></td>
    <td><%=h role.role_j %></td>
    <td><%=h role.desc %></td>
    <td><%=h role.desc_j %></td>
    <td><%= link_to 'Show', role %></td>
    <td><%= link_to 'Edit', edit_role_path(role) %></td>
    <td><%= link_to 'Destroy', role, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

