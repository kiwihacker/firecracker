  </p>
  <p>
    <%= f.label :fname_yomi %><br />
    <%= f.text_field :fname_yomi %>
  </p>
  <p>
    <%= f.label :lname_eng %><br />
    <%= f.text_field :lname_eng %>
  </p>
  <p>
    <%= f.label :fname_eng %><br />
    <%= f.text_field :fname_eng %>
  </p>
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :role %><br />
    <%= f.text_field :role %>
  </p>
  <p>
    <%= f.label :added_by %><br />
    <%= f.text_field :added_by %>
  </p>
  <p>
    <%= f.label :locked %><br />
